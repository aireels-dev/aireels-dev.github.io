---
interface Props {
  quote: string;
  author: string;
  avatar?: string;
}

const { quote, author, avatar } = Astro.props;

// Generate a simple avatar color based on author name
const getAvatarColor = (name: string) => {
  const colors = ['bg-red-500', 'bg-blue-500', 'bg-green-500', 'bg-yellow-500', 'bg-purple-500', 'bg-pink-500'];
  const index = name.length % colors.length;
  return colors[index];
};

const avatarColor = getAvatarColor(author);
const initials = author.split('').slice(0, 2).join('');
---

<div class="testimonial-card bg-white dark:bg-gray-800 p-6 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-all duration-300">
  <!-- Quote Icon -->
  <div class="flex justify-start mb-4">
    <svg class="w-8 h-8 text-function-blue opacity-60" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
    </svg>
  </div>

  <!-- Quote -->
  <blockquote class="text-gray-700 dark:text-gray-300 mb-6 leading-relaxed">
    "{quote}"
  </blockquote>

  <!-- Author -->
  <div class="flex items-center">
    <div class={`w-10 h-10 rounded-full ${avatarColor} flex items-center justify-center mr-3`}>
      {avatar ? (
        <img src={avatar} alt={author} class="w-10 h-10 rounded-full object-cover">
      ) : (
        <span class="text-white font-medium text-sm">{initials}</span>
      )}
    </div>

    <div>
      <p class="font-medium text-tech-black dark:text-white">{author}</p>
      <p class="text-sm text-gray-500 dark:text-gray-400">用户</p>
    </div>
  </div>

  <!-- Verified Badge -->
  <div class="flex justify-end mt-4">
    <div class="flex items-center text-xs text-success-green">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <span>真实用户</span>
    </div>
  </div>
</div>