---
import Layout from '../layouts/Layout.astro';
import CodeBlock from '../components/CodeBlock.astro';
import { siteConfig } from '../config';

const quickStartCode = `// 1. 安装SDK
npm install @lytech/ai-sdk

// 2. 初始化客户端
import { LytechAI } from '@lytech/ai-sdk';

const client = new LytechAI({
  apiKey: 'your-api-key',
  endpoint: 'https://api.lytech.ai'
});

// 3. 生成内容
const result = await client.generate({
  prompt: '为我的咖啡店写一篇朋友圈推广',
  type: 'social-media',
  industry: 'food'
});

console.log(result.content);`;

const authCode = `// API密钥认证
const headers = {
  'Authorization': 'Bearer YOUR_API_KEY',
  'Content-Type': 'application/json'
};

// 发送请求
const response = await fetch('https://api.lytech.ai/v1/generate', {
  method: 'POST',
  headers: headers,
  body: JSON.stringify({
    prompt: '生成营销文案',
    options: {
      length: 'medium',
      tone: 'professional'
    }
  })
});`;

const errorHandlingCode = `// 错误处理最佳实践
try {
  const result = await client.generate(params);
  return result;
} catch (error) {
  if (error.status === 429) {
    // 请求频率限制
    console.log('请求过于频繁，请稍后重试');
  } else if (error.status === 401) {
    // API密钥无效
    console.log('API密钥无效，请检查');
  } else {
    // 其他错误
    console.log('请求失败:', error.message);
  }
}`;
---

<Layout title="技术文档">
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-function-blue/10 via-transparent to-success-green/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-tech-black dark:text-white mb-6">
        技术文档
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        完整的API文档和开发指南，助您快速集成AI功能
      </p>
    </div>
  </section>

  <!-- Navigation -->
  <section class="py-8 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 sticky top-16 z-40">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex space-x-8 overflow-x-auto">
        <a href="#quick-start" class="text-function-blue font-medium whitespace-nowrap">快速开始</a>
        <a href="#api-reference" class="text-gray-600 hover:text-function-blue dark:text-gray-400 dark:hover:text-function-blue font-medium whitespace-nowrap">API参考</a>
        <a href="#examples" class="text-gray-600 hover:text-function-blue dark:text-gray-400 dark:hover:text-function-blue font-medium whitespace-nowrap">代码示例</a>
        <a href="#sdk" class="text-gray-600 hover:text-function-blue dark:text-gray-400 dark:hover:text-function-blue font-medium whitespace-nowrap">SDK文档</a>
        <a href="#faq" class="text-gray-600 hover:text-function-blue dark:text-gray-400 dark:hover:text-function-blue font-medium whitespace-nowrap">常见问题</a>
      </nav>
    </div>
  </section>

  <!-- Quick Start -->
  <section id="quick-start" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold text-tech-black dark:text-white mb-6">
            快速开始
          </h2>
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-function-blue text-white rounded-full flex items-center justify-center font-bold text-sm">
                1
              </div>
              <div>
                <h3 class="font-bold text-tech-black dark:text-white mb-2">
                  获取API密钥
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                  注册账户并在控制台中生成您的API密钥
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-function-blue text-white rounded-full flex items-center justify-center font-bold text-sm">
                2
              </div>
              <div>
                <h3 class="font-bold text-tech-black dark:text-white mb-2">
                  安装SDK
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                  使用npm或yarn安装我们的官方SDK
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-function-blue text-white rounded-full flex items-center justify-center font-bold text-sm">
                3
              </div>
              <div>
                <h3 class="font-bold text-tech-black dark:text-white mb-2">
                  发起第一个请求
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                  初始化客户端并调用内容生成API
                </p>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <a href="/demo" class="btn-primary">
              在线体验
            </a>
          </div>
        </div>

        <div>
          <CodeBlock
            code={quickStartCode}
            language="javascript"
            title="快速开始示例"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- API Reference -->
  <section id="api-reference" class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-tech-black dark:text-white mb-12">
        API参考
      </h2>

      <div class="space-y-8">
        <!-- Authentication -->
        <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-8">
          <h3 class="text-2xl font-bold text-tech-black dark:text-white mb-4">
            身份验证
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            所有API请求都需要在请求头中包含有效的API密钥。
          </p>
          <CodeBlock
            code={authCode}
            language="javascript"
            title="身份验证示例"
          />
        </div>

        <!-- Endpoints -->
        <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-8">
          <h3 class="text-2xl font-bold text-tech-black dark:text-white mb-6">
            API端点
          </h3>

          <div class="space-y-6">
            <!-- Content Generation -->
            <div class="border-l-4 border-function-blue pl-6">
              <div class="flex items-center space-x-3 mb-2">
                <span class="px-2 py-1 bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 text-xs font-mono rounded">
                  POST
                </span>
                <code class="text-function-blue font-mono">/v1/generate</code>
              </div>
              <h4 class="font-bold text-tech-black dark:text-white mb-2">
                内容生成
              </h4>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                根据提示词生成营销内容
              </p>

              <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                <h5 class="font-medium text-tech-black dark:text-white mb-2">请求参数</h5>
                <div class="space-y-2 text-sm">
                  <div class="grid grid-cols-3 gap-4">
                    <span class="font-mono text-function-blue">prompt</span>
                    <span class="text-gray-500">string</span>
                    <span class="text-gray-600 dark:text-gray-400">必需 - 内容描述</span>
                  </div>
                  <div class="grid grid-cols-3 gap-4">
                    <span class="font-mono text-function-blue">type</span>
                    <span class="text-gray-500">string</span>
                    <span class="text-gray-600 dark:text-gray-400">可选 - 内容类型</span>
                  </div>
                  <div class="grid grid-cols-3 gap-4">
                    <span class="font-mono text-function-blue">industry</span>
                    <span class="text-gray-500">string</span>
                    <span class="text-gray-600 dark:text-gray-400">可选 - 行业领域</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Content Analysis -->
            <div class="border-l-4 border-success-green pl-6">
              <div class="flex items-center space-x-3 mb-2">
                <span class="px-2 py-1 bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 text-xs font-mono rounded">
                  POST
                </span>
                <code class="text-function-blue font-mono">/v1/analyze</code>
              </div>
              <h4 class="font-bold text-tech-black dark:text-white mb-2">
                内容分析
              </h4>
              <p class="text-gray-600 dark:text-gray-400">
                分析内容质量并提供优化建议
              </p>
            </div>

            <!-- Optimization -->
            <div class="border-l-4 border-purple-500 pl-6">
              <div class="flex items-center space-x-3 mb-2">
                <span class="px-2 py-1 bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 text-xs font-mono rounded">
                  POST
                </span>
                <code class="text-function-blue font-mono">/v1/optimize</code>
              </div>
              <h4 class="font-bold text-tech-black dark:text-white mb-2">
                营销优化
              </h4>
              <p class="text-gray-600 dark:text-gray-400">
                获取个性化的营销策略建议
              </p>
            </div>
          </div>
        </div>

        <!-- Error Handling -->
        <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-8">
          <h3 class="text-2xl font-bold text-tech-black dark:text-white mb-4">
            错误处理
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            API使用标准HTTP状态码表示请求结果。以下是常见错误码的处理方式：
          </p>

          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <div class="space-y-3">
              <div class="flex items-center space-x-3">
                <span class="px-2 py-1 bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300 text-xs font-mono rounded">
                  400
                </span>
                <span class="text-gray-700 dark:text-gray-300">请求参数错误</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="px-2 py-1 bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300 text-xs font-mono rounded">
                  401
                </span>
                <span class="text-gray-700 dark:text-gray-300">API密钥无效</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="px-2 py-1 bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300 text-xs font-mono rounded">
                  429
                </span>
                <span class="text-gray-700 dark:text-gray-300">请求频率限制</span>
              </div>
            </div>
            <div class="space-y-3">
              <div class="flex items-center space-x-3">
                <span class="px-2 py-1 bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300 text-xs font-mono rounded">
                  500
                </span>
                <span class="text-gray-700 dark:text-gray-300">服务器错误</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="px-2 py-1 bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300 text-xs font-mono rounded">
                  503
                </span>
                <span class="text-gray-700 dark:text-gray-300">服务暂时不可用</span>
              </div>
            </div>
          </div>

          <CodeBlock
            code={errorHandlingCode}
            language="javascript"
            title="错误处理示例"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section id="faq" class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-tech-black dark:text-white mb-12 text-center">
        常见问题
      </h2>

      <div class="space-y-4" x-data="{ openFaq: null }">
        {siteConfig.faq.map((faq, index) => (
          <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
            <button
              class="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
              @click={`openFaq = openFaq === ${index} ? null : ${index}`}
            >
              <span class="font-medium text-tech-black dark:text-white">
                {faq.question}
              </span>
              <svg
                class="w-5 h-5 text-gray-500 transform transition-transform"
                :class={`openFaq === ${index} ? 'rotate-180' : ''`}
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div
              class="px-6 pb-4 text-gray-600 dark:text-gray-400"
              x-show={`openFaq === ${index}`}
              x-transition:enter="transition ease-out duration-200"
              x-transition:enter-start="opacity-0 transform -translate-y-2"
              x-transition:enter-end="opacity-100 transform translate-y-0"
            >
              {faq.answer}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Support -->
  <section class="py-20 bg-gradient-to-r from-function-blue to-success-green">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold text-white mb-4">
        需要技术支持？
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        我们的技术团队随时为您提供帮助
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-function-blue hover:bg-gray-100 font-bold py-4 px-8 rounded-lg transition-colors text-lg">
          联系技术支持
        </a>
        <a href="/demo" class="border-2 border-white text-white hover:bg-white hover:text-function-blue font-bold py-4 px-8 rounded-lg transition-colors text-lg">
          在线体验
        </a>
      </div>
    </div>
  </section>
</Layout>