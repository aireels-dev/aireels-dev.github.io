---
import Layout from '../layouts/Layout.astro';
import CodeBlock from '../components/CodeBlock.astro';
import { siteConfig } from '../config';

const apiExamples = {
  content: `// 内容生成 API
const generateContent = async (prompt, type) => {
  const response = await fetch('/api/content/generate', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ prompt, type })
  });
  return response.json();
};

// 使用示例
const socialPost = await generateContent(
  '推广我的设计服务',
  'social-media'
);`,

  analysis: `// 内容分析 API
const analyzeContent = async (content) => {
  const response = await fetch('/api/content/analyze', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ content })
  });
  return response.json();
};

// 返回结果包含：情感分析、关键词、改进建议
const analysis = await analyzeContent(userContent);`,

  optimization: `// 优化建议 API
const getOptimization = async (industry, metrics) => {
  const response = await fetch('/api/optimize', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ industry, metrics })
  });
  return response.json();
};

// 获取针对性的运营建议
const suggestions = await getOptimization('design', {
  engagement: 0.03,
  conversion: 0.01
});`
};
---

<Layout title="产品功能">
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-function-blue/10 via-transparent to-success-green/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-tech-black dark:text-white mb-6">
        产品功能
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        三大核心模块，全方位解决创业者的数字化营销需求
      </p>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {siteConfig.features.map((feature, index) => (
        <div class={`mb-20 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Feature Info -->
            <div class="space-y-6">
              <div class="flex items-center space-x-3">
                <div class="w-12 h-12 bg-function-blue/10 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-function-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    {feature.icon === 'tool' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    )}
                    {feature.icon === 'edit-3' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    )}
                    {feature.icon === 'trending-up' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    )}
                  </svg>
                </div>
                <span class="text-sm font-medium text-function-blue bg-function-blue/10 px-3 py-1 rounded-full">
                  核心模块 {index + 1}
                </span>
              </div>

              <h2 class="text-3xl font-bold text-tech-black dark:text-white">
                {feature.title}
              </h2>

              <p class="text-lg text-gray-600 dark:text-gray-400">
                {feature.description}
              </p>

              <div class="space-y-4">
                {feature.details.map((detail) => (
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-success-green mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700 dark:text-gray-300">{detail}</span>
                  </div>
                ))}
              </div>

              <div class="flex space-x-4 pt-4">
                <a href="./demo/" class="btn-primary">
                  立即体验
                </a>
                <a href="./docs/" class="btn-secondary">
                  查看文档
                </a>
              </div>
            </div>

            <!-- Code Example -->
            <div>
              <CodeBlock
                code={apiExamples[Object.keys(apiExamples)[index]]}
                language="javascript"
                title={`${feature.title} - API 示例`}
              />
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Technical Advantages -->
  <section class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-tech-black dark:text-white mb-4">
          技术优势
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          先进的AI技术，为您提供专业级的服务体验
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <div class="w-16 h-16 bg-function-blue/10 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-function-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-tech-black dark:text-white mb-2">快速响应</h3>
          <p class="text-gray-600 dark:text-gray-400 text-sm">
            毫秒级API响应，确保流畅的用户体验
          </p>
        </div>

        <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <div class="w-16 h-16 bg-success-green/10 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-success-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-tech-black dark:text-white mb-2">高准确率</h3>
          <p class="text-gray-600 dark:text-gray-400 text-sm">
            基于大模型训练，内容生成准确率超过95%
          </p>
        </div>

        <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <div class="w-16 h-16 bg-purple-500/10 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-tech-black dark:text-white mb-2">安全可靠</h3>
          <p class="text-gray-600 dark:text-gray-400 text-sm">
            企业级安全保障，数据隐私严格保护
          </p>
        </div>

        <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <div class="w-16 h-16 bg-yellow-500/10 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-tech-black dark:text-white mb-2">持续优化</h3>
          <p class="text-gray-600 dark:text-gray-400 text-sm">
            基于用户反馈持续改进，功能不断增强
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Integration Examples -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-tech-black dark:text-white mb-4">
          集成能力
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          灵活的API接口，轻松集成到您的现有系统
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- REST API -->
        <div class="p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold text-tech-black dark:text-white mb-4">REST API</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            标准的RESTful API，支持所有主流编程语言
          </p>
          <div class="space-y-2 text-sm">
            <div class="flex items-center space-x-2">
              <span class="w-2 h-2 bg-success-green rounded-full"></span>
              <span class="text-gray-700 dark:text-gray-300">JSON格式数据交换</span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="w-2 h-2 bg-success-green rounded-full"></span>
              <span class="text-gray-700 dark:text-gray-300">OAuth 2.0 身份验证</span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="w-2 h-2 bg-success-green rounded-full"></span>
              <span class="text-gray-700 dark:text-gray-300">完整的错误处理</span>
            </div>
          </div>
        </div>

        <!-- Webhook -->
        <div class="p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold text-tech-black dark:text-white mb-4">Webhook</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            实时通知机制，及时获取处理结果
          </p>
          <div class="space-y-2 text-sm">
            <div class="flex items-center space-x-2">
              <span class="w-2 h-2 bg-function-blue rounded-full"></span>
              <span class="text-gray-700 dark:text-gray-300">任务完成通知</span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="w-2 h-2 bg-function-blue rounded-full"></span>
              <span class="text-gray-700 dark:text-gray-300">状态变更推送</span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="w-2 h-2 bg-function-blue rounded-full"></span>
              <span class="text-gray-700 dark:text-gray-300">自定义事件触发</span>
            </div>
          </div>
        </div>

        <!-- SDK -->
        <div class="p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold text-tech-black dark:text-white mb-4">官方SDK</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            多语言SDK支持，快速上手开发
          </p>
          <div class="space-y-2 text-sm">
            <div class="flex items-center space-x-2">
              <span class="w-2 h-2 bg-purple-500 rounded-full"></span>
              <span class="text-gray-700 dark:text-gray-300">JavaScript/Node.js</span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="w-2 h-2 bg-purple-500 rounded-full"></span>
              <span class="text-gray-700 dark:text-gray-300">Python</span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="w-2 h-2 bg-purple-500 rounded-full"></span>
              <span class="text-gray-700 dark:text-gray-300">PHP</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-function-blue to-success-green">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold text-white mb-4">
        准备体验强大的AI功能了吗？
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        立即开始免费试用，感受AI驱动的数字化营销工具
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="./demo/" class="bg-white text-function-blue hover:bg-gray-100 font-bold py-4 px-8 rounded-lg transition-colors text-lg">
          免费试用
        </a>
        <a href="./docs/" class="border-2 border-white text-white hover:bg-white hover:text-function-blue font-bold py-4 px-8 rounded-lg transition-colors text-lg">
          技术文档
        </a>
      </div>
    </div>
  </section>
</Layout>