---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config';
---

<Layout title="联系我们">
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-function-blue/10 via-transparent to-success-green/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-tech-black dark:text-white mb-6">
        联系我们
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        随时为您提供专业的技术支持和咨询服务
      </p>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8">
          <h2 class="text-3xl font-bold text-tech-black dark:text-white mb-8">
            发送消息
          </h2>

          <form class="space-y-6" x-data="contactForm()">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  姓名 *
                </label>
                <input
                  type="text"
                  x-model="form.name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-function-blue focus:border-transparent dark:bg-gray-700 dark:text-white"
                  placeholder="请输入您的姓名"
                >
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  邮箱 *
                </label>
                <input
                  type="email"
                  x-model="form.email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-function-blue focus:border-transparent dark:bg-gray-700 dark:text-white"
                  placeholder="your@email.com"
                >
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  公司/组织
                </label>
                <input
                  type="text"
                  x-model="form.company"
                  class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-function-blue focus:border-transparent dark:bg-gray-700 dark:text-white"
                  placeholder="您的公司或组织名称"
                >
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  咨询类型
                </label>
                <select
                  x-model="form.type"
                  class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-function-blue focus:border-transparent dark:bg-gray-700 dark:text-white"
                >
                  <option value="general">一般咨询</option>
                  <option value="technical">技术支持</option>
                  <option value="business">商务合作</option>
                  <option value="pricing">价格咨询</option>
                  <option value="demo">产品演示</option>
                </select>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                消息内容 *
              </label>
              <textarea
                x-model="form.message"
                required
                rows="6"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-function-blue focus:border-transparent dark:bg-gray-700 dark:text-white resize-none"
                placeholder="请详细描述您的需求或问题..."
              ></textarea>
            </div>

            <div class="flex items-start space-x-3">
              <input
                type="checkbox"
                x-model="form.agree"
                id="agree"
                class="mt-1 w-4 h-4 text-function-blue bg-gray-100 border-gray-300 rounded focus:ring-function-blue dark:focus:ring-function-blue dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
              >
              <label for="agree" class="text-sm text-gray-600 dark:text-gray-400">
                我同意接收产品更新和营销信息，并已阅读
                <a href="/aireels-web/privacy/" class="text-function-blue hover:underline">隐私政策</a>
              </label>
            </div>

            <button
              type="submit"
              @click.prevent="submitForm()"
              :disabled="!canSubmit"
              :class="canSubmit ? 'btn-primary' : 'bg-gray-300 dark:bg-gray-600 text-gray-500 dark:text-gray-400 cursor-not-allowed'"
              class="w-full py-4 px-6 font-bold rounded-lg transition-colors text-lg"
            >
              <span x-show="!submitting">发送消息</span>
              <span x-show="submitting" class="flex items-center justify-center">
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                发送中...
              </span>
            </button>

            <!-- Success Message -->
            <div x-show="submitted" class="p-4 bg-success-green/10 border border-success-green/20 rounded-lg">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-success-green mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-success-green font-medium">消息发送成功！我们会尽快回复您。</span>
              </div>
            </div>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h2 class="text-3xl font-bold text-tech-black dark:text-white mb-8">
              联系方式
            </h2>

            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-function-blue/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-function-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-tech-black dark:text-white mb-1">
                    电子邮箱
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400 mb-2">
                    我们通常在24小时内回复邮件
                  </p>
                  <a href="mailto:contact@lytech.ai" class="text-function-blue hover:underline">
                    contact@lytech.ai
                  </a>
                </div>
              </div>

              <!-- Location -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-success-green/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-success-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-tech-black dark:text-white mb-1">
                    办公地址
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400 mb-2">
                    欢迎预约到访，我们很乐意面对面交流
                  </p>
                  <p class="text-gray-700 dark:text-gray-300">
                    郑州市高新区科技园
                  </p>
                </div>
              </div>

              <!-- WeChat -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-purple-500/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-purple-500" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.374 0 0 5.373 0 12s5.374 12 12 12 12-5.373 12-12S18.626 0 12 0zm5.568 8.16c-.169 1.58-.896 8.922-1.25 11.799-.15 1.21-.447 1.615-.732 1.656-.621.067-1.092-.4-1.692-.784-2.22-1.424-3.479-2.283-5.679-3.748-1.425-.949-.501-1.469.31-2.322.212-.223 3.925-3.593 3.994-3.901.009-.039.016-.184-.07-.26-.085-.075-.21-.05-.3-.029-.128.029-2.137 1.357-6.037 3.986-.571.394-1.088.585-1.546.572-.509-.016-1.488-.287-2.214-.523-.89-.289-1.599-.442-1.538-.931.032-.255.38-.515 1.047-.781 4.1-1.781 6.836-2.955 8.208-3.522 3.897-1.61 4.703-1.892 5.23-1.901.116-.002.374.027.54.165.14.116.179.272.196.38z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-tech-black dark:text-white mb-1">
                    微信客服
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400 mb-2">
                    工作时间：9:00-18:00 (周一至周五)
                  </p>
                  <p class="text-gray-700 dark:text-gray-300">
                    扫码添加客服微信
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Service Plans -->
          <div class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8">
            <h3 class="text-2xl font-bold text-tech-black dark:text-white mb-6">
              服务方案
            </h3>

            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-function-blue/10 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-function-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-tech-black dark:text-white">订阅制服务</h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400">按月或按年订阅，享受持续的工具使用权</p>
                </div>
              </div>

              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-success-green/10 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-success-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-tech-black dark:text-white">功能定制</h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400">根据具体业务需求，定制专属功能</p>
                </div>
              </div>

              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-purple-500/10 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-tech-black dark:text-white">咨询指导</h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400">一对一的营销策略咨询和使用培训</p>
                </div>
              </div>

              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-yellow-500/10 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-tech-black dark:text-white">技术支持</h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400">全方位的技术支持，确保工具稳定运行</p>
                </div>
              </div>
            </div>

            <p class="text-sm text-gray-500 dark:text-gray-400 mt-6 text-center">
              * 具体价格和方案详情，请联系我们获取
            </p>
          </div>

          <!-- Response Time -->
          <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="text-lg font-bold text-tech-black dark:text-white mb-4">
              响应时间
            </h3>
            <div class="space-y-3 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-400">一般咨询</span>
                <span class="font-medium text-tech-black dark:text-white">24小时内</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-400">技术支持</span>
                <span class="font-medium text-tech-black dark:text-white">4小时内</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-400">紧急问题</span>
                <span class="font-medium text-tech-black dark:text-white">1小时内</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-function-blue to-success-green">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold text-white mb-4">
        准备开始了吗？
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        免费试用我们的AI工具，体验智能化营销的魅力
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/aireels-web/demo/" class="bg-white text-function-blue hover:bg-gray-100 font-bold py-4 px-8 rounded-lg transition-colors text-lg">
          免费试用
        </a>
        <a href="/aireels-web/docs/" class="border-2 border-white text-white hover:bg-white hover:text-function-blue font-bold py-4 px-8 rounded-lg transition-colors text-lg">
          查看文档
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  function contactForm() {
    return {
      form: {
        name: '',
        email: '',
        company: '',
        type: 'general',
        message: '',
        agree: false
      },
      submitting: false,
      submitted: false,

      get canSubmit() {
        return this.form.name &&
               this.form.email &&
               this.form.message &&
               this.form.agree &&
               !this.submitting;
      },

      async submitForm() {
        if (!this.canSubmit) return;

        this.submitting = true;

        // Simulate form submission
        await new Promise(resolve => setTimeout(resolve, 2000));

        // Here you would typically send the form data to your backend
        console.log('Form submitted:', this.form);

        this.submitting = false;
        this.submitted = true;

        // Reset form after 5 seconds
        setTimeout(() => {
          this.submitted = false;
          this.form = {
            name: '',
            email: '',
            company: '',
            type: 'general',
            message: '',
            agree: false
          };
        }, 5000);
      }
    };
  }
</script>